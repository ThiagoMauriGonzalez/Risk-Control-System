<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRiscoRegistrado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riscos\nRegistrados"
            android:textColor="#339CFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Card de Risco: Biológico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9F3FB"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:layout_marginHorizontal="4dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvTipoRisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biológico"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDetalhesRisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setor 5 · Crítico"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVerDetalhes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Detalhes"
                    android:backgroundTint="#339CFF"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:backgroundTint="#339CFF"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginStart="135dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Espaço empurrando o botão pra baixo -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Botão Registrar Novo Risco -->
        <Button
            android:id="@+id/btnNovoRisco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Novo\nRisco"
            android:layout_marginTop="350dp"
            android:backgroundTint="#339CFF"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp" />

        <Button
            android:id="@+id/btnDeslogar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deslogar"
            android:layout_marginTop="32dp"
            android:backgroundTint="#339CFF"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp" />
    </LinearLayout>
</ScrollView>